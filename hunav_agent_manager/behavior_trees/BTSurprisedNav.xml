<root main_tree_to_execute = "SurprisedNavTree">

    <TreeNodesModel>
        <Action ID="SurprisedNav">
            <input_port name="agent_id">identifier of the agent</input_port>
            <input_port name="time_step">time step in seconds to compute movement</input_port>
        </Action>
        <Condition ID="IsRobotVisible">
            <input_port name="agent_id">identifier of the agent</input_port>
        </Condition>
        <Condition ID="TimeExpiredCondition">
            <input_port name="seconds">duration of the timer in seconds</input_port>
            <input_port name="ts">time step to be accumulated</input_port>
            <input_port name="only_once">boolean to indicate if the timer must be reset at the end or not</input_port>
        </Condition>
    </TreeNodesModel>

    <include path="BTRegularNav.xml"/>

    <BehaviorTree ID="SurprisedNavTree">
        <Fallback name="SurprisedFallback">
            <Sequence name="SurNav"> <!--ReactiveSequence-->
                <IsRobotVisible agent_id="{id}" distance="4.0" />
                <Inverter>
                    <TimeExpiredCondition seconds="30.0" ts="{dt}" only_once="True" />
                </Inverter>
                <SurprisedNav agent_id="{id}" time_step="{dt}" />
            </Sequence>
            <Sequence name="RegNav">
                <SetBlackboard output_key="agentid" value="{id}" />
                <SetBlackboard output_key="timestep" value="{dt}" />
                <SubTree ID="RegularNavTree" id="agentid" dt="timestep" />
            </Sequence>
        </Fallback>
    </BehaviorTree>


</root>
